# =============================================================================
# .env.example  –  Copy this to .env.development or .env.production
# =============================================================================
# All keys used by @repo/system-config are listed here.
# Never put real secrets in this file — it is safe to commit.
# =============================================================================

# ── Server ────────────────────────────────────────────────────────────────────
NODE_ENV=development
PORT=4000
ENGINE_PORT=4000

# ── Telegram ──────────────────────────────────────────────────────────────────
TELEGRAM_BOT_ACCESS_TOKEN=

# ── AWS credentials ───────────────────────────────────────────────────────────
AWS_REGION=us-east-1

# ── Elasticsearch ─────────────────────────────────────────────────────────────
ELASTICSEARCH_URL=
ELASTICSEARCH_API_KEY=

# ── Redis / ElastiCache ───────────────────────────────────────────────────────
REDIS_URL=redis://localhost:6379

# ── Amazon SES ────────────────────────────────────────────────────────────────
SES_FROM_EMAIL=

# ── Amazon SQS ────────────────────────────────────────────────────────────────
SQS_QUEUE_URL=

# ── Amazon Bedrock ────────────────────────────────────────────────────────────
BEDROCK_MODEL_ID=amazon.nova-lite-v1:0